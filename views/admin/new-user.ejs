<div class="d-flex justify-content-center align-items-center" style="height: 500px; background-color: rgb(88, 76, 76);">



<form action="" method="post">
<!-- Name Input -->
<input type="text"pattern="^[A-Za-z][A-Za-z\s]*[A-Za-z]$" id="name" name="name" placeholder="Enter Name" required>
<br><br>

<!-- For Email Input -->
<input type="email" id="email" name="email" placeholder="Enter Email" required>
<br><br>

 <!-- For Mobile number -->
 <input type="text" id="mobile" name="mobile" placeholder="Enter number" required>
 <br><br>

 

 <!-- For password -->
 <input type="password" id="password" name="password" placeholder="Enter Password" required>
 <br><br>



<%

if(typeof message !== 'undefined'){
  %>
  
  <p style = "color: rgb(255, 255, 255);"> <%= message %> </p>
  <p><a class="d-flex justify-content-center text-light" href="/login">login here</a></p>

  <%
}

%>
<div class="d-flex justify-content-center align-items-center"> <button type="submit" value="Add User" class="btn btn-primary">Add User</button></div>
