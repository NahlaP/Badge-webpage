<% include('../layouts/header.ejs')%>

<div class="d-flex justify-content-center align-items-center"><h1>Edit your profile</h1></div>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="d-flex justify-content-center align-items-center" style="height: 500px; background-color: rgb(88, 76, 76);">

      <form action="" method="post">
  
        <input type="hidden"pattern="^[A-Za-z][A-Za-z\s]*[A-Za-z]$" name="user_id" value="<%= user._id%>">
        <br><br>
        <input type="text" name="name" value="<%= user.name %>" placeholder="Enter name" required>
        <br><br>
        <input type="email" name="email" value="<%= user.email %>" placeholder="Enter email" required>
        <br><br>
        <input type="text" name="mno" value="<%= user.mobile %>" placeholder="Enter mobile no." required>
        <br><br>
        
        <div class="d-flex justify-content-center align-items-center"><button type="submit" value="Update Profile" class="btn btn-danger">Update</button></div>
        

      </form>
        
      </div>
    </div>
  </div>
</div>


